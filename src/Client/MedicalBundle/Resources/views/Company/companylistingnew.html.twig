                                        {% set ssImageName = 'no_image.png' %}
                                        <a href="{{ path('client_medical_company_detail', {'id':asData.id,'name':asCompanyName})}}">
                                            <img src="{{ asset('client/images/'~ssImageName) }}" alt="No Image"  height="100px" width="200px"/></a>
