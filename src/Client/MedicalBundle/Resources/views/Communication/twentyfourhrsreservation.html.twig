{% extends 'ClientMedicalBundle::layout.html.twig' %}

{% block title %}{{'Medical Tourism Information'|trans}}{% endblock %}

{% block body %}

{% include 'ClientMedicalBundle:Company:quicksearch.html.twig' %}
<div class="container sendquote twentyfourhrs_page">	
	<a class="btn btn-default whitebtn back_link" href="{{ path('client_medical_homepage') }}">{{'Close and keep browsing'|trans}} >></a>
	<h3>{{'Thank you for 24h reservation!'|trans}}</h3>
	<div>
		{{'Your 24h reservation will available untill'|trans}} {{ date("now")|date_modify("+1 day")|date("Y m d H:i") }}.		
	</div>
	<form method="post" action="{{ path('client_twentyfour_reservation',{'quote_id': app.request.get('quote_id'),'company_id':app.request.get('company_id')})}}" enctype="multipart/form-data">
	<div class="col-md-6 col-sm-6">
		<div class="thumbnail">
        <h2>{{'While thinking, I’ll send you an e-mail later for:'|trans}}</h2>
		<p>{{"Travel agency will preapre for you a personal offer. You’ll be able to customize it"|trans}}</p>
        <div>
		  <div class="row">			
			{% for child in form.offers %}
				<div class="chk_offers">
					{{ form_widget(child) }}
					{{ form_label(child) }}
				</div>
			{% endfor %}			
		  </div>
		  <div class="row">
			<label>{{"Do you have any specific wishes?"|trans}}</label>
			{{ form_widget(form.specific_wishes, { 'attr': {'class': 'form-control'} }) }}
		  </div>  
			<input type="submit" class="btn btn-default bluebtn" value="{{'I’m interested'|trans}} >>">		  
		</div>
        </div>
    </div>
	<div class="col-md-6 col-sm-6">
    	<div class="thumbnail">
            <div class="additional_information">
                 <h2>{{"Need a hotel? Book it for your stay:"|trans}}</h2>	
                 <div>
                  <div class="row text-center">
					{% if locale == 'lt' %}	
						{% set ssHeight = 310 %}
					{% else %}
						{% set ssHeight = 298 %}
					{% endif %}
                    <iframe src="http://www.booking.com/general.html?aid=388156&tmpl=searchbox&calendar=1&lang={{ locale }}&width=210" width="212" height="{{ ssHeight }}" frameborder="0" scrolling="no" name="sbox_iframe" style="padding-bottom: 10px;"></iframe>
                  </div>              
                </div>
            </div>		
            
        </div>
	</div>	
	</form>
</div>
	
{% endblock %}